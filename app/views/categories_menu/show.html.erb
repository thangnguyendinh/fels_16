<% provide(:title, "New Word") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= @category.each do |c| %>
      <h1><%= c.name %></h1>
      <h2>you are learned <%= UsersAnswer.where(user_id: session[:user_id],status: 1).where('word_id in (?)',Word.select("word_id").where(category_id: c.id)).count %>/<%= Word.where(category_id: c.id).count %></h2>
      <p><% @word.where(category_id: c.id).each do |w| %><%= w.content %>, 
         <% end %></p>
      <a href="#">Start</a>
    <% end %>
  </div>
</div>
