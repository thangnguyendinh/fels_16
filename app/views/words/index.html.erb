<h1>Listing words</h1>
<%= link_to "New word", new_word_path %>
<table>
  <tr>
    <th>category</th>
    <th>content</th>
    <th colspan="3"></th>
  </tr>
 
<% @word.each do |word| %>
  <tr>
    <td><%= word.category.name %></td>
    <td><%= word.content %></td>
    <td><%= link_to "Show", word_path(word) %></td>
    <td><%= link_to "Edit", edit_word_path(word) %></td>
    <td><%= link_to "Destroy", word_path(word),
                    method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
